                                <div class="row sameheight-container">
                                    <div class="col-xs-2 vmiddleright">
                                        @Html.LabelFor(model => model.Name)
                                    </div>
                                    <div class="col-xs-4">
                                        <input name="Name" type="text" class="form-control underlined" value="@Model.Name">
                                    </div>
                                    @if (Model != null)
