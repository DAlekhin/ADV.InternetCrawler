@using ADV.InternetCrawler.ControlPanel.Models
@model DataPointEditModel

<article class="content items-list-page">
    <div class="title-search-block">
        <div class="title-block">
            <div class="row">
                <div class="col-xs-6">
                    <h3 class="title">
                        @(Model == null ? "Добавить" : "Редактировать") новую точку загрузки данных
                    </h3>
                </div>
            </div>
        </div>
    </div>
